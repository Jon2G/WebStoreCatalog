@page "/"
@page "/Index"
@using WebStore.Models
@using WebStore.Data;
<PageTitle>Index</PageTitle>
<body class="home">
<Header/>
	<!-- /.navbar --> 

	<!-- Header -->
	<header id="head">
		<div class="container">
			<div class="row">
				<h1 class="lead">Courses Store</h1>
				<br/>
				<p><a class="btn btn-default btn-lg" role="button" href="/Courses">VER CURSOS</a></p>
			</div>
		</div>
	</header>
	<!-- /Header -->

	<!-- Intro -->
	@*<div class="container text-center">
		<br> <br>
		<h2 class="thin">Acerca de nosotros...</h2>
		<p class="text-muted">[no sabemos ni quienes somos]</p>
	</div>
	*@
	<!-- /Intro-->
		
	<!-- Highlights - jumbotron -->
	<div class="jumbotron top-space">
		<div class="container">
			
			<div class="row" style="margin: auto;padding: 10px;left: 20%;position: absolute;">
				<div class="col-md-3 col-sm-6 highlight">
					<div class="h-caption"><h4><i class="fa fa-cogs fa-5"></i>Misión</h4></div>
					<div class="h-body text-center">
						<p>@InfoPage.Mision</p>
					</div>
				</div>
				<div class="col-md-3 col-sm-6 highlight">
					<div class="h-caption"><h4><i class="fa fa-eye fa-5"></i>Visión</h4></div>
					<div class="h-body text-center">
						<p>@InfoPage.Vision</p>
					</div>
				</div>
				<div class="col-md-3 col-sm-6 highlight">
					<div class="h-caption"><h4><i class="fa fa-bullseye fa-5"></i>Objetivos</h4></div>
					<div class="h-body text-center">
						<p>@InfoPage.Target</p>
					</div>
				</div>
			</div> <!-- /row  -->
		
		</div>
	</div>
	<!-- /Highlights -->

	<!-- Social links. @TODO: replace by link/instructions in template -->
	<section id="social">
		<div class="container">
			<div class="wrapper clearfix">
				<!-- AddThis Button BEGIN -->
				<div class="addthis_toolbox addthis_default_style">
				<a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
				<a class="addthis_button_tweet"></a>
				<a class="addthis_button_linkedin_counter"></a>
				<a class="addthis_button_google_plusone" g:plusone:size="medium"></a>
				</div>
				<!-- AddThis Button END -->
			</div>
		</div>
	</section>
	<!-- /social links -->

</body>

@code{
	public static InfoPageModel InfoPage { get; set; }
	public Index()
	{
		InfoPage = InfoPageModel.Get();
	}
}