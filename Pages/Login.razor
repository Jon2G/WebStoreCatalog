									<label>Contraseña <span class="text-danger">*</span></label>
									<input type="password" class="form-control">
								</div>

								<hr>

								<div class="row">
										<div class="col-lg-4 text-right">
										<button class="btn btn-action" type="submit">Ingresar</button>
									</div>
								</div>
							</form>
						</div>
					</div>

				</div>
				
			</article>
